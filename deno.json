{
    "tasks": {
        "start": "deno run --allow-sys --allow-net --allow-read --allow-write --allow-env src/server.ts"  
      },
    "compilerOptions": {
      "allowJs": true,
      "lib": ["deno.window"],
      "strict": true
    },
    "lint": {
      "files": {
        "include": ["src/"],
        "exclude": ["src/testdata/"]
      },
      "rules": {
        "tags": ["recommended"],
        "include": ["ban-untagged-todo"],
        "exclude": ["no-unused-vars"]
      }
    },
    "fmt": {
      "files": {
        "include": ["src/"],
        "exclude": ["src/testdata/"]
      },
      "options": {
        "useTabs": true,
        "lineWidth": 80,
        "indentWidth": 4,
        "semiColons": false,
        "singleQuote": true,
        "proseWrap": "preserve"
      }
    },
    "test": {
      "files": {
        "include": ["src/"],
        "exclude": ["src/testdata/"]
      }
    }
  }