{
	"tasks": {
		"start": "deno run --unstable-kv --allow-sys --allow-net --allow-read --allow-write --allow-env src/server.ts",
		"kvUtility": "deno run --unstable-kv --allow-net --allow-read --allow-write --allow-env src/tasks/kvUtility.ts",
		"dumpKv": "deno run --unstable-kv --allow-net --allow-read --allow-write --allow-env src/tasks/db_dump.ts"
	},
	"imports": {
		"@hono/hono": "jsr:@hono/hono@^4.4.0",
		"@neon/serverless": "npm:@neondatabase/serverless",
		"@std/dotenv": "jsr:@std/dotenv@^0.224.0",
		"drizzle-orm": "npm:drizzle-orm@0.30.10"
	},

	"compilerOptions": {
		"allowJs": true,
		"lib": ["deno.window"],
		"strict": true
	},
	"lint": {
		"files": {
			"include": ["src/"],
			"exclude": ["src/testdata/"]
		},
		"rules": {
			"tags": ["recommended"],
			"include": ["ban-untagged-todo"],
			"exclude": ["no-unused-vars"]
		}
	},

	"fmt": {
		"useTabs": true,
		"lineWidth": 80,
		"indentWidth": 4,
		"semiColons": false,
		"singleQuote": true,
		"proseWrap": "preserve",
		"include": ["src/"],
		"exclude": ["src/testdata/", "src/fixtures/**/*.ts"]
	},
	"test": {
		"files": {
			"include": ["src/"],
			"exclude": ["src/testdata/"]
		}
	}
}
